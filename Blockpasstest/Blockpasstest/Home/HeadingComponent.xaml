<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Blockpasstest.Home.HeadingComponent"
    x:Name="This">
    <ContentView.Content>
        <StackLayout Margin="0,19,0,24">
            <Label
                FontFamily="Montserrat-Bold.ttf#Montserrat"
                FontSize="20"
                Text="{Binding Source={x:Reference This}, Path=CustomTitle}"
                Margin="0"
                Padding="0"
            />
            <Label
                Margin="0,-7,0,0"
                Padding="0"
                FontFamily="SourceSansPro-Regular.ttf#Source Sans Pro"
                FontSize="14"
                Text="{Binding Source={x:Reference This}, Path=CustomSubTitle}"
                TextColor="#9e9e9e"
            />
            </StackLayout>
    </ContentView.Content>
</ContentView>

